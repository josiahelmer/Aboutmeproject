<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AboutmeActivity"
    android:id="@+id/HomeLayout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Line1Layout"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Writing"
            android:id="@+id/WritingButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Videogames"
            android:id="@+id/videoGamesButton"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work"
            android:id="@+id/WorkButton"
            android:layout_above="@+id/FriendsButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Line1Layout"
        android:layout_alignRight="@+id/Line1Layout"
        android:layout_alignEnd="@+id/Line1Layout"
        android:id="@+id/Line2Layout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School"
            android:id="@+id/SchoolButton"
            android:layout_alignTop="@+id/FriendsButton"
            android:layout_toLeftOf="@+id/FriendsButton"
            android:layout_toStartOf="@+id/FriendsButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:id="@+id/FriendsButton"
            android:layout_below="@+id/Line1Layout"
            android:layout_alignRight="@+id/Line1Layout"
            android:layout_alignEnd="@+id/Line1Layout"
            android:layout_marginRight="47dp"
            android:layout_marginEnd="47dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Josiah Elmer"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
